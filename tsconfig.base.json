{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@camelforge/source"],
    "baseUrl":"./",
    "paths": {
      "@/*": ["./*"],

      "@shared/ui": ["libs/shared/ui/src/index.ts"],
      "@shared/ui/*": ["libs/shared/ui/src/*"],

      "@shared/utils": ["libs/shared/utils/src/index.ts"],
      "@shared/utils/*": ["libs/shared/utils/src/*"],

      "@shared/hooks": ["libs/shared/hooks/src/index.ts"],
      "@shared/hooks/*": ["libs/shared/hooks/src/*"]
    }
  }
}
